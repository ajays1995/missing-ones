<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#E14B3B">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:layout_marginTop="10dp"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_span="3"
            android:padding="18dip"
            android:textColor="#E14B3B"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Missing Person Details "
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:id="@+id/textView" />
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_editext"
        android:singleLine="true"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:id="@+id/name"
        android:hint="  Full Name"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/gender"
            android:hint="  Gender             (Male/Female)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/age"
            android:hint="  Age"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/mdate"
            android:hint="  Missing Date         (dd/mm/yyyy)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/guardian"
            android:hint="  Guardian's Name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:layout_marginTop="350dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/ic_action_social_person"
            android:padding="1dp"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="375dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Browse"
            android:id="@+id/browse"
            android:background="@drawable/button_browse"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:layout_marginTop="450dp"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_span="3"
            android:padding="5dip"
            android:textColor="#E14B3B"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Missing Location"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/location" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/maddress"
            android:hint="  Address"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="610dp">

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="560dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:hint="  State"
            android:id="@+id/mstate"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="660dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="610dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/mcity"
            android:hint="  City"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/subheader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:layout_marginTop="660dp"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_span="3"
            android:padding="5dip"
            android:textColor="#E14B3B"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Appearance"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/appearance" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <Spinner
           android:id="@+id/spinner1"
           android:layout_width="match_parent"
           android:layout_height="70dp"
           android:background="@drawable/spinner"
           android:popupBackground="@drawable/rounded_editext"
           android:layout_marginTop="720dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:entries="@array/htpe"
           android:prompt="@string/hairtype"
           android:hint="Hair Type"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/spinner"
            android:popupBackground="@drawable/rounded_editext"
            android:layout_marginTop="790dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/hcolor"
            android:prompt="@string/haircolor"
            android:hint="Hair color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/spinner"
            android:popupBackground="@drawable/rounded_editext"
            android:layout_marginTop="860dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:entries="@array/complexion"
            android:prompt="@string/complexion"
            android:hint="Complexion"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/spinner"
            android:popupBackground="@drawable/rounded_editext"
            android:layout_marginTop="930dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Body Build"
            android:entries="@array/body"
            android:prompt="@string/body"/>
    </LinearLayout>





    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/subheader3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:layout_marginTop="1000dp"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_span="3"
            android:padding="5dip"
            android:textColor="#E14B3B"
            android:text="Identification Mark"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ident_mark"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1150dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1060dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/mark"
            android:hint="  Identification Mark"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:layout_marginTop="1130dp"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_span="3"
            android:padding="18dip"
            android:textColor="#E14B3B"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reporting Person Details "
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/textView2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1270dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1220dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/rname"
            android:hint="  Full Name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1320dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1270dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/relation"
            android:hint="  Relationship With Person"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1370dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1320dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/contact"
            android:hint="  Contact"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1420dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1370dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/raddress"
            android:hint="  Address"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1480dp">

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1420dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:hint="  State"
            android:id="@+id/rstate"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1530dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1470dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_editext"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@null"
            android:id="@+id/rcity"
            android:hint="  City"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1600dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1540dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Submit"
            android:id="@+id/next"
            android:background="@drawable/button_next"/>
    </LinearLayout>

</RelativeLayout>
    </ScrollView>